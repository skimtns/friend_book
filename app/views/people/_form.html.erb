<%= form_with(model: @person, class: 'ui form') do |f| %>
  <%= f.label :first_name %>
  <%= f.text_field :first_name, required: true %>
  <br />
  <%= f.label :last_name %>
  <%= f.text_field :last_name, required: true %>
  <br />
  <%= f.label :avatar %>
  <%= f.text_field :avatar %>
  <br />
  <%= f.label :email %>
  <%= f.text_field :email %>
  <br />
  <%= f.label :phone %>
  <%= f.text_field :phone %>
  <br />
  <%= f.submit nil, class: 'ui button primary' %>
<% end %>